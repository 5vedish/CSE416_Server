{
    "main": "dist/index.js",
    "scripts": {
        "build": "npx prisma db push",
        "postinstall": "npx prisma db push && tsc",
        "start": "NODE_ENV=production node dist/index.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev-w": "npx ts-node-dev --respawn --pretty --transpile-only src/index.ts",
        "dev-l": "NODE_ENV=development nodemon --watch './**/*.ts' --transpile-only src/index.ts",
        "deploy": "git add . && git commit -m Heroku && git push heroku master",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/node": "^16.10.3",
        "husky": "^7.0.4",
        "lint-staged": "^11.2.6",
        "nodemon": "^2.0.14",
        "prettier": "^2.4.1",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "@prisma/client": "^3.2.1",
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "date-fns": "^2.25.0",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "nanoid": "^3.1.30",
        "postmark": "^2.7.8",
        "prisma": "^3.2.1"
    },
    "cacheDirectories": [
        "node_modules/"
    ],
    "prettier": {
        "arrowParens": "always",
        "trailingComma": "all",
        "singleQuote": true,
        "semi": true,
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,md}": "prettier --write"
    }
}

{
    "main": "dist/index.js",
    "scripts": {
        "build": "npx prisma db push",
        "postinstall": "tsc",
        "start": "node dist/index.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev": "ts-node-dev --respawn --pretty --transpile-only src/index.ts",
        "deploy": "git add . && git commit -m Heroku && git push heroku master",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/node": "^16.10.3",
        "husky": "^7.0.4",
        "lint-staged": "^11.2.6",
        "prettier": "^2.4.1",
        "ts-node": "^10.2.1",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "@prisma/client": "^3.2.1",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "prisma": "^3.2.1"
    },
    "cacheDirectories": [
        "node_modules/"
    ],
    "prettier": {
        "arrowParens": "always",
        "trailingComma": "all",
        "singleQuote": true,
        "semi": false,
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,md}": "prettier --write"
    }
}

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  displayName String
  email String @unique
  password String
  createdAt DateTime @default(now())
}

model Question {
  id Int @id @default(autoincrement())
  question String
  choices String[]
  correctChoice Int
}

model PasswordReset {
  id Int @id @default(autoincrement())
  token String @unique
  createdAt DateTime
}
